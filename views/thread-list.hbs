<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>{{ list.BoardName }}</title>
    <meta name="description" content="{{ list.BoardInfo }}в">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap core CSS -->
    <link href="https://getbootstrap.com/docs/5.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Style -->
    <link rel="stylesheet" href="../css/style.css">

    <!-- Favicons -->
    <meta name="theme-color" content="#7952b3">
</head>

<body>

<!-- Nav -->
<div class="nav-container bg-dark">
    <div class="container">
        <nav class="navbar navbar-expand-lg border border-light text-white rounded">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <h3 class="m-0">JSACH</h3>
                </a>
            </div>
        </nav>
    </div>
</div>
<!-- /Nav -->

<!-- Main -->
<main>
    <div class="container">
        <div class="thread-body">
            <div class="row row-cols-1 row-cols-lg-3">
                {{#each list.threads}}
                    <div class="thread-item">
                        <div class="card">
                            <div class="card-header">
                                <h5><a href="/{{ ../list.Board }}/{{ thread_num }}">{{{ posts.[0].subject }}}</a></h5>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">Ответов: {{ posts_count }}</li>
                            </ul>
                            <div class="card-body">
                                <p class="card-text">{{{ posts.[0].comment }}}</p>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>

</main>
<!-- /Main -->

<!-- Pagination -->
<div class="container">
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{#each paginationStart}}
                <li class="page-item"><a class="page-link" href="/{{ ../list.Board }}?page={{ this }}"> {{ this }}</a></li>
            {{/each}}
            ...
            {{#each paginationEnd}}
                <li class="page-item"><a class="page-link" href="/{{ ../list.Board }}?page={{ this }}"> {{ this }}</a></li>
            {{/each}}
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>
<!-- /Pagination -->

<!-- Footer -->
<footer class="bg-dark text-center text-white">
    <!-- Grid container -->
    <div class="container p-4 pb-0">
        <!-- Section: CTA -->
        <section class="">
            <p class="d-flex justify-content-center align-items-center">
                <span class="me-3">If you click nothing will happen</span>
                <button type="button" class="btn btn-outline-light btn-rounded">
                    PRESS BRAVELY!
                </button>
            </p>
        </section>
        <!-- Section: CTA -->
    </div>
    <!-- Grid container -->
</footer>
<!-- /Footer -->

</body>

</html>
