{{> header}}
<!-- Main -->
<main>
    <div class="container">
        <div class="accordion accordion-flush" id="accordionFlushExample">
            {{#each message}}
                <div class="accordion-item thread-catalog">
                    <h2 class="accordion-header" id="flush-headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#thread-catalog-{{@index}}" aria-expanded="false"
                                aria-controls="flush-collapseOne">
                            {{@key}}
                        </button>
                    </h2>
                    <div id="thread-catalog-{{@index}}" class="accordion-collapse collapse"
                         aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">
                            <div class="container">
                                <div class="row row-cols-1 row-cols-lg-3 subject-list">
                                    {{#each this}}
                                        <div class="subject">
                                            <div class="subject-content">
                                                <h5><a href="/{{ id }}">{{ name }}</a></h5>
                                                <p>
                                                    Страниц: {{ pages }}
                                                </p>
                                                <a href="/{{ id }}" class="icon-link">
                                                    <button type="button" class="btn btn-outline-secondary btn-sm">
                                                        Перейти
                                                    </button>
                                                </a>
                                            </div>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</main>
<!-- /Main -->
{{> footer}}